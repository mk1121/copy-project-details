{
  "manifest_version": 3,
  "name": "Copy Project Details",
  "version": "1.1",
  "description": "Copies project title, description, and skills via popup or context menu.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting",
    "contextMenus" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Copy Details",
    "default_popup": "popup.html"
  },
  "icons": { 
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  }
}
